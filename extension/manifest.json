{
    "name": "Visible Connections",
    "version": "2.1.0",
    "manifest_version": 3,
    "author": "Karen Grigorian",
    "description": "View visible connections between web pages",
    "permissions": ["storage", "clipboardWrite"],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js",
                "bridge.js"         
            ],
            "css": [
                "contentStyles.css"
            ],
            "run_at": "document_start"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    
    "action": {
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png"
        },
        "default_popup": "popup.html"
    },
    
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": [
        {
        "resources": ["images/*","reader/*"],
        "matches": ["<all_urls>"]
        }
    ],

    
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
  
}